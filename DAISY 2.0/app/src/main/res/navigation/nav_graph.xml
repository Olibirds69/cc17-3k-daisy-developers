<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/permissions_fragment"
    tools:ignore="ExtraText">

    <fragment
        android:id="@+id/permissions_fragment"
        android:name="com.example.daisy.fragment.PermissionsFragment"
        android:label="PermissionsFragment">

        <action
            android:id="@+id/action_permissions_to_dashboard"
            app:destination="@id/dashboardFragment"
            app:popUpToInclusive="true" />


    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.daisy.fragment.DashboardFragment"
        android:label="DashboardFragment">

        <action
            android:id="@+id/action_permissions_to_CameraFragment"
            app:destination="@id/camera_fragment"
            app:popUpTo="@id/dashboardFragment"
            app:popUpToInclusive="true" />
    </fragment>


    <fragment
        android:id="@+id/camera_fragment"
        android:name="com.example.daisy.fragment.CameraFragment"
        android:label="CameraFragment">

        <action
            android:id="@+id/action_camera_to_permissions"
            app:destination="@id/permissions_fragment"
            app:popUpTo="@id/camera_fragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>
